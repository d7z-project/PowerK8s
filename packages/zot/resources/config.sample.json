{
  "distSpecVersion": "1.0.1",
  "storage": {
    "dedupe": true,
    "gc": true,
    "gcDelay": "1h",
    "gcInterval": "6h",
    "rootDirectory": "/var/lib/zot"
  },
  "http": {
    "address": "0.0.0.0",
    "port": "443",
    "realm": "zot",
    "tls": {
      "cert": "/etc/zot/server.cert",
      "key": "/etc/zot/server.key"
    },
    "auth": {
      "htpasswd": {
        "path": "/etc/zot/htpasswd"
      }
    },
    "accessControl": {
      "**": {
        "defaultPolicy": [
          "read",
          "create",
          "update",
          "delete"
        ],
        "anonymousPolicy": [
          "read"
        ]
      }
    }
  },
  "log": {
    "level": "error"
  }
}
